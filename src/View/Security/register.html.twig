{% extends "layout.html.twig" %} {% block title %} {{ parent() }} - S'enregistrer {% endblock %} {% block content %}
<div class="container p-3 col-sm-5">
    <h2>Cr√©er un compte</h2>
    <form class="form-control" method="POST">
        {% if error %}
        <span style="color:red"> {{error.fields}} </span> {% endif %}
        <div class="mb-3">
            <label for="name" class="form-label">Nom</label> {% if error %}
            <span style="color:red"> {{error.name}} </span> {% endif %}
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Adresse email</label> {% if error %}
            <span style="color:red"> {{error.email}} </span> {% endif %}
            <input type="text" class="form-control" id="email" name="email">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Mot de passe</label>
            <input type="password" class="form-control" id="password" name="password">
        </div>
        <div class="mb-3">
            <label for="passwordVerif" class="form-label">Mot de passe</label> {% if error %}
            <span style="color:red"> {{error.password}} </span> {% endif %}
            <input type="password" class="form-control" id="passwordVerif" name="passwordVerif">
        </div>
        <div class="text-end">
            <button type="submit" class="btn btn-outline-info rounded-pill" style="background-color:#041A53">S'enregistrer</button>
        </div>
    </form>
</div>
{% endblock %}